
@{
    ViewData["Title"] = "Index";
    int count = 1;
}
@model List<TournamentVM>
<div class="text-center">
    <h1>Tournaments</h1>
    <a class="btn btn-primary" asp-action="Create"> Add new tournament</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>

                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var tournament in Model)
            {
                <tr>
                    <th scope="row">@count</th>
                    <td>@tournament.Name</td>
                    <td>
                        <a asp-action="Detail" class="text-info">Show stats</a>
                        <a asp-action="Delete" class="text-danger">Delete</a>

                    </td>

                </tr>
                count++;
            }
        </tbody>
    </table>
</div>

